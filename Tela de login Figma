                        font-family: 'Inter', sans-serif;
                        padding: 20px;
                    }
                    
                    .dashboard-card {
                        background: white;
                        border-radius: 24px;
                        padding: 40px;
                        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
                        text-align: center;
                        max-width: 500px;
                        width: 100%;
                        animation: slideIn 0.6s ease-out;
                    }
                    
                    @keyframes slideIn {
                        from {
                            opacity: 0;
                            transform: translateY(30px);
                        }
                        to {
                            opacity: 1;
                            transform: translateY(0);
                        }
                    }
                    
                    .success-icon {
                        width: 80px;
